<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SSUSUAI" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#7370FB</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TabLayoutRating" parent="standardText">
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">#4F5A85</item>
        <item name="tabIndicatorColor">@color/background_bnv_fab</item>
        <item name="android:nextFocusUp">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="button">
        <item name="android:backgroundTint">@color/background_tint_button</item>
        <item name="android:textColor">@color/text_color_button</item>
    </style>

    <style name="standardText.date">
        <item name="android:textColor">#9FADCA</item>
    </style>

    <style name="standardText.body">
        <item name="android:textColor">#4F5A85</item>
    </style>

    <style name="standardText.profileText">
        <item name="android:textColor">#A09FCA</item>
    </style>

    <style name="standardTextBold.day">
        <item name="android:textColor">#4F5A85</item>
    </style>

    <style name="standardText.calendar_text">
        <item name="android:textColor">#BCC1CD</item>
    </style>

    <style name="standardTextBold.start_time_and_and_text_in_card_in_calendar">
        <item name="android:textColor">#212525</item>
    </style>

    <style name="background_card_event">
        <item name="android:backgroundTint">#F6F6F5</item>
    </style>

    <style name="standardText.text_in_card_in_calendar">
        <item name="android:textColor">#212525</item>
    </style>



</resources>