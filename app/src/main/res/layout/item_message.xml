<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/their_message"
        android:id="@+id/their_message"/>

<!--    <include layout="@layout/my_message"-->
<!--        android:id="@+id/my_message"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent" />-->

    <com.google.android.material.card.MaterialCardView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/my_message"
        android:layout_marginVertical="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="65dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/message_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/my_message"
            android:elevation="2dp"
            android:padding="10dp"
            style="@style/standardText"
            android:textStyle="bold"
            android:text="Новая школа, старая школа Затхлый фасад святого рок-н-ролла Эстеты, олдфаги, декаданты, ньюфаги Хардкор, хардбас, мамбл и шлягер"
            android:textColor="#fff"
            android:textSize="18sp" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>