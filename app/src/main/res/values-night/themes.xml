<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SSUSUAI" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/d_main_accent</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/d_background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="background_std">
        <item name="android:background">@drawable/background_dark</item>
    </style>

    <style name="btnv_back">
        <item name="backgroundTint">@color/d_btnv</item>
    </style>

    <style name="TabLayoutChats">
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/d_day_fio</item>
        <item name="android:nextFocusUp">@color/d_main_accent</item>
        <item name="android:backgroundTint">@color/d_main_accent</item>
    </style>

    <style name="standardTextBold">
        <item name="android:fontFamily">@font/centurygothic_bold</item>
        <item name="android:textColor">@color/d_main_accent</item>
    </style>

</resources>